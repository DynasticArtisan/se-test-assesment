{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["*"],
      "@config/*": ["config/*"],
      "@generated/*": ["__generated__/*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}